<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin_HelloApp.Pages.AuthorizePage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#7A87BF" Padding="10" CornerRadius="0">
                <StackLayout Orientation="Horizontal" >
                    <Image Source="pilot.png" HeightRequest="20" />
                    <Label Text="Pilot Mobile" HorizontalTextAlignment="Start" TextColor="White" FontSize="Medium" Margin="10,0,0,0"/>
                </StackLayout>
            </Frame>

            <Label Text="Имя сервера" FontSize="Medium" FontFamily="Tahoma" HorizontalOptions="StartAndExpand" Margin="10,0,10,0" />
            <Entry Text="{Binding Server, Mode=TwoWay}" FontSize="Medium" FontFamily="Tahoma" HorizontalOptions="Fill" Margin="10,0,10,10" />

            <Label Text="Имя базы данных" FontSize="Medium" FontFamily="Tahoma" HorizontalOptions="StartAndExpand" Margin="10,0,10,0" />
            <Entry Text="{Binding DB, Mode=TwoWay}" FontSize="Medium" FontFamily="Tahoma" HorizontalOptions="Fill" Margin="10,0,10,10" />

            <Label Text="Имя пользователя" FontSize="Medium" FontFamily="Tahoma" HorizontalOptions="StartAndExpand" Margin="10,0,10,0" />
            <Entry Text="{Binding Login, Mode=TwoWay}" FontSize="Medium" FontFamily="Tahoma" HorizontalOptions="Fill" Margin="10,0,10,10" />

            <Label Text="Пароль" FontSize="Medium" FontFamily="Tahoma" HorizontalOptions="StartAndExpand" Margin="10,0,10,0" />
            <Entry IsPassword="True" Text="{Binding Password, Mode=TwoWay}" FontSize="Medium" FontFamily="Tahoma" HorizontalOptions="Fill"
                   Margin="10,0,10,10" />

            <Label Text="Ошибка подключения к БД Pilot" FontSize="Medium" FontFamily="Tahoma" HorizontalOptions="StartAndExpand" Margin="10,10,10,0"
                   TextColor="Red" IsVisible="{Binding IsErrorVisible, Mode=OneWay}" />
            <!--<Label Text="{Binding Error, Mode=OneWay}" FontSize="Medium" FontFamily="Tahoma" HorizontalOptions="StartAndExpand" Margin="10,0,10,0"
                   TextColor="Red" IsVisible="{Binding IsErrorVisible, Mode=OneWay}"/>-->

            <Button Text="Подключиться" FontSize="Title" Background="#7A87BF" FontFamily="Tahoma" TextColor="White" 
                    VerticalOptions="EndAndExpand" HorizontalOptions="Fill" Margin="10,0,10,10"
                    Command="{Binding ConnectCommand}"
                    IsEnabled="{Binding CanConnectCommand, Mode=OneWay}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>