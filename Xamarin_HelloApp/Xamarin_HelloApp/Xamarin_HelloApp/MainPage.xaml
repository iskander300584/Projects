    <!--<ScrollView >-->
        <StackLayout Spacing="10"> 
            <Frame BackgroundColor="#2196F3" Padding="10" CornerRadius="0">
                <StackLayout>
                    <StackLayout Orientation="Horizontal" >
                        <Label Text="Pilot Mobile" HorizontalTextAlignment="Start" TextColor="White" FontSize="Small"/>
                        <Label x:Name="labelConnect" Text="Нет подключения" HorizontalTextAlignment="End" HorizontalOptions="EndAndExpand" TextColor="White" FontSize="Small" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Button Text="↑" HorizontalOptions="EndAndExpand" Background="#2196F3" TextColor="White" FontSize="Medium" Clicked="Up_Click" WidthRequest="40" />
                        <Button Text="∆" HorizontalOptions="End" Background="#2196F3" TextColor="White" FontSize="Medium" Clicked="Home_Click" WidthRequest="40" />
                    </StackLayout>
                
                </StackLayout>
            </Frame>

            <!-- HeightRequest="14" WidthRequest="14" -->
            <ListView x:Name="listView" ItemTapped="PilotItem_Tapped" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout Orientation="Horizontal" Spacing="0" >
                                    <ffimage:SvgCachedImage WidthRequest="15" HeightRequest="15" Source="{Binding ImageSource}" Margin="5,0,10,0" />
                                    <Label Text="{Binding VisibleName}" FontSize="Body" VerticalOptions="Center" />
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        <Frame BackgroundColor="#2196F3" Padding="10" CornerRadius="0" VerticalOptions="EndAndExpand" >
            <StackLayout Orientation="Horizontal">
                <Button Text="View" Background="#2196F3" TextColor="White" FontSize="Medium" WidthRequest="100" HorizontalOptions="Start" Margin="0,0,0,0" />
                <Label HorizontalOptions="CenterAndExpand" />
                <Button Text="File" Background="#2196F3" TextColor="White" FontSize="Medium" WidthRequest="100" HorizontalOptions="Center" />
                <Label HorizontalOptions="CenterAndExpand" />
                <Button Text="Card" Background="#2196F3" TextColor="White" FontSize="Medium" WidthRequest="100" HorizontalOptions="End" Margin="0,0,0,0" />
            </StackLayout>
        </Frame>
            
